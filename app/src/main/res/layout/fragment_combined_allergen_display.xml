<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.ui.CombinedAllergenDisplayFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/definiteAllergenTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Definite Allergens" />

        <FrameLayout
            android:id="@+id/definiteAllergenFragmet"
            android:layout_width="match_parent"
            android:layout_height="174dp">

        </FrameLayout>

        <Button
            android:id="@+id/Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add" />

        <TextView
            android:id="@+id/suggestedAllergenTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suggested Allergens" />

        <FrameLayout
            android:id="@+id/suggestedAllergenFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>


</FrameLayout>
